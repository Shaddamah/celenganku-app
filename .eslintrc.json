{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "import/no-extraneous-dependencies": 0,
        "no-plusplus": 0,
        "no-console": 0
    }
}